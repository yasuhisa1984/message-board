<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
<div class="form-group">
    <div class="col-sm-12">
      <label for="name" class="col-sm-2 control-label">名前:</label>
      <%= f.text_field :name, :class => "form-control",:placeholder => 'Please name...' %>
    </div>
</div>
<div class="form-group">
    <div class="col-sm-12">
      <label for="age" class="col-sm-2 control-label">年齢:</label>
      <%= f.text_field :age, :class => "form-control",:placeholder => 'Please age...' %>
    </div>
</div>
<div class="form-group">
    <div class="col-sm-12">
      <label for="body" class="col-sm-2 control-label">内容:</label>
      <%= f.text_area :body, :class => "form-control" ,:placeholder => "Please input..."  %>
    <br><%= f.submit :class => "btn btn-primary"%>
<% end %>
    </div>
</div>
 
