


<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>




<%= form_for(Message.new) do |f| %>
  <div class="form-group">
    <div class="col-sm-12">
      <label for="name" class="col-sm-2 control-label">名前:</label>
      <%= f.text_field :name, :class => "form-control",:placeholder => '' %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-12">
      <label for="body" class="col-sm-2 control-label">内容:</label>
      <%= f.text_area :body, :class => "form-control"  %>
      <br><%= f.submit :class => "btn btn-primary"%>
  <% end %>
    </div>
  </div>
 